@model StudentPortal.Models.Profile
@{
    ViewBag.Title = "Edit Profile";
}

<h4>@ViewBag.Title.</h4>

<div class="row">
    <div class="col-md-4">
        <section>
            <form id="profile" method="post">
                <div class="form-group">
                    <div class="col-md-10 col-md-push-1">
                        <label>StudentId : </label>  @Html.DisplayFor(m => m.StudentId)
                    </div>
                </div>
                <div class="form-group mb-3">
                    <div class="col-md-10 col-md-push-1">
                        <label>Email : </label>  @Html.DisplayFor(m => m.Email)
                    </div>
                </div>
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="FirstName" class="form-control" autocomplete="FirstName" aria-required="true" placeholder="FirstName" />
                    <label asp-for="FirstName" class="form-label">First Name</label>
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="LastName" class="form-control" autocomplete="LastName" aria-required="true" placeholder="LastName" />
                    <label asp-for="LastName" class="form-label">Last Name</label>
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div>
                    <button id="profile-submit" type="submit" class="w-100 btn btn-lg btn-primary">Update</button>
                </div>
                <input type="hidden" name="Email" value="@Model.Email" />
                <input type="hidden" name="StudentId" value="@Model.StudentId" />
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

